.slider-inner
  %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", :rel => "stylesheet"}

  #myCarousel.carousel.slide.slider{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.rounded-x.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      %li.rounded-x{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      %li.rounded-x{"data-slide-to" => "2", "data-target" => "#myCarousel"}
      %li.rounded-x{"data-slide-to" => "3", "data-target" => "#myCarousel"}
      %li.rounded-x{"data-slide-to" => "4", "data-target" => "#myCarousel"}
    / Wrapper for slides
    .carousel-inner{:role => "listbox"}
      .item.active
        = image_tag('banner1.png')
      / .carousel-caption
      / 	%h2 РМИС
      / 	%h4  Развитие региональной медицинской информационной системы Калужской области.
      .item
        = image_tag('banner2.png')
        .carousel-caption

      .item
        = image_tag('banner3.png')
      / .carousel-caption
      / 	%h2 ЛИС
      / 	%h4 Beatiful flowers in Kolymbari, Crete.
      / .item
      / 	= image_tag('banner4.png')
      .item
        = image_tag('banner5.png')


    / Left and right controls
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next
