.slider-inner
	%link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", :rel => "stylesheet"}
	#myCarousel.carousel.slide{"data-ride" => "carousel"}
		/ Indicators
		%ol.carousel-indicators
			%li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
			%li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
			%li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
			%li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
		/ Wrapper for slides
		.carousel-inner{:role => "listbox"}
			.item.active
				= image_tag('banner1.png', style: "height: 1%;")
				.carousel-caption
					%h3 Chania
					%p The atmosphere in Chania has a touch of Florence and Venice.
			.item
				= image_tag('banner2.png', style: "height: 1%;")
				.carousel-caption
					%h3 Chania
					%p The atmosphere in Chania has a touch of Florence and Venice.
			.item
				= image_tag('banner3.png', style: "height: 1%;")
				.carousel-caption
					%h3 Flowers
					%p Beatiful flowers in Kolymbari, Crete.
			.item
				= image_tag('banner4.png', style: "height: 1%;")
				.carousel-caption
					%h3{style: "color: black;"} Доступая и современая?
					%p Теперь доступно и в нашем регионе
		/ Left and right controls
		%a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
			%span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
			%span.sr-only Previous
		%a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
			%span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
			%span.sr-only Next

